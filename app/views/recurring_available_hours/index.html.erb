<h1>Listing recurring_available_hours</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Instructor</th>
      <th>User</th>
      <th>secs_from_start</th>
      <th>recurring_interval</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@recurring_available_hours.nil? %>
      <% @recurring_available_hours.each do |recurring_available_hour| %>
        <tr>
          <td><%= recurring_available_hour.instructor_id %></td>
          <td><%= Instructor.find(recurring_available_hour.instructor_id).user.id %></td>
          <td><%= recurring_available_hour.secs_from_start %></td>
          <td><%= RecurringInterval.find(recurring_available_hour.recurring_interval_id).name %></td>
          <td><%= link_to 'Edit', edit_instructor_recurring_available_hour_path(@instructor, recurring_available_hour) %></td>
          <td><%= link_to 'Destroy', instructor_recurring_available_hour_path(@instructor, recurring_available_hour), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recurring Available Hour', new_instructor_recurring_available_hour_path(@instructor) %>
