<%= bootstrap_form_for(@recurring_available_hour, url: "/instructors/#{@instructor.id}/recurring_available_hours/#{@recurring_available_hour.id}/") do |f| %>
  <% if @recurring_available_hour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recurring_available_hour.errors.count, "error") %> prohibited this recurring_available_hour from being saved:</h2>

      <ul>
      <% @recurring_available_hour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.select(:instructor_id, @instructor_select_options, label: "Instructor Id") %>
