= form_for @institute do |f|
  - if @institute.errors.any?
    #error_explanation
      %h2= "#{pluralize(@institute.errors.count, "error")} prohibited this institute from being saved:"
      %ul
        - @institute.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
