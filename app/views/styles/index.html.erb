<h1>All Yoga Styles</h1>

<table class="table table-striped all-styles-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td style="width: 15%"><%= style.name %></td>
        <td style="width: 70%"><%= style.description %></td>
        <td><%= link_to 'Edit', edit_style_path(style), :class => "btn btn-default"%></td>
        <td><%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @styles %>
<br>

<%= link_to 'New Style', new_style_path, class: "btn btn-default" %>
