<table class="table table-striped">
  <thead>
    <tr>
      <th>From</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <% from = User.find(message.from_user_id) %>
      <tr>
        <td><%= link_to from.email, student_path(from.student) %></td>
        <td><%= link_to message.title, message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
