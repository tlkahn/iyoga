<table class="table table-striped">
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Title</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.from_user_id %></td>
        <td><%= message.to_user_id %></td>
        <td><%= link_to message.title, message_path(message) %></td>
        <td><%= message.created_at.to_formatted_s(:short) %></td>
        <td><%= link_to 'Destroy', message_path(message), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path, class: "btn btn-primary" %>
