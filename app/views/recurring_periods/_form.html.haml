= bootstrap_form_for @recurring_period do |f|
  - if @recurring_period.errors.any?
    #error_explanation
      %h2= "#{pluralize(@recurring_period.errors.count, "error")} prohibited this recurring_period from being saved:"
      %ul
        - @recurring_period.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
