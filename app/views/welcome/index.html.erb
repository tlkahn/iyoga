	<main class="welcome-body" role="main">
	<div class="container">
		<div class="row">
			<div class="welcome-title col-md-12">
				Your Private Yoga Coach Everyday
			</div>
			<div class="welcome-subtitle col-md-12">
				Find a teacher close by, forget gyms, clubs and studios
			</div>
			<div class="icon-image-wrapper">
				<%= image_tag "zen.jpeg", :class => "icon-image" %>
			</div>
		</div>
		<div class="row welcome-date-time">
			<div class="col-md-2"></div>
			<div class="col-md-3">
				<div>From</div>
				<div>
					<form class="form-search form-inline">
						<input type="text" class="datepicker form-control search-query" />
					</form>
				</div>
			</div>
<!-- 			<div class="timepicker-wrap col-md-3">
				<div>From</div>
				<div>
					<form class="form-search form-inline">
						<input type="text" class="timepicker form-control search-query" />
					</form>
				</div>
			</div> -->
			<div class="col-md-3">
				<div>To</div>
				<div>
					<form class="form-search form-inline">
						<input type="text" class="timepicker form-control search-query" />
					</form>
				</div>
			</div>
      <div class="col-md-3">
        <div>Near</div>
        <div>
          <input type="text" class="search-location form-control" placeholder="Search location" />
        </div>
        <div id="geomap"></div>
      </div>
		</div>
		<div class="row">
			<div class="col-md-12 details-list" style="text-align:center;margin-top:10px;margin-bottom:10px">
				<form action="/search">
					<input style="display:none" type="text" name="date" id="date-value" />
					<input style="display:none" type="text" name="from" id="from-value" />
					<input style="display:none" type="text" name="to" id="to-value" />
					<input style="display:none" type="text" name="locationname" id="location-value" />
					<input style="display:none" type="text" name="style" id="style-value" />
					<input style="display:none" type="text" name="level" id="level-value" />
					<input style="display:none" class="form-control" name="location" type="text"></input>

					<input type="submit" class="btn btn-default" value="Search" style="opacity: 0.8;width: 23%;margin-left: 8.5%;">
				</form>
			</div>
		</div>

  		<div class="row welcome-img">
  			<div class="col-md-1"></div>
  			<div class="col-md-10" style="text-align:center">
  					<%= image_tag "carousel/yoga1.png", :class => "wide-image" %>
  			</div>
  			<div class="col-md-1"></div>
  		</div>

    </div>

		</main>
		<%= render "shared/footer"%>

<script type="text/javascript">

	function addEvent(element, event, fn) {
		if (element.addEventListener)
			element.addEventListener(event, fn, false);
		else if (element.attachEvent)
			element.attachEvent('on' + event, fn);
	}

	+function(){
		addEvent(window, 'load', function(){
			$("input.search-location").geocomplete({
				map: "#geomap",
				details: ".details-list"
			})
		});
	}()
</script>